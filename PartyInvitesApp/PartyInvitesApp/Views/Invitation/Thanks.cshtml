@model PartyInvitesApp.Models.Party

<h2>Thank you for your response!</h2>
<p>Your response has been recorded for the party:</p>

@if (Model != null)
{
    <h3>@Model.Description</h3>
    <p><strong>Event Date:</strong> @Model.EventDate</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <a href="/Party/Manage/@Model.Id">View Party Details</a>
}
else
{
    <p style="color: red;">Oops! Something went wrong. Please try again later.</p>
}
