@model PartyInvitesApp.Models.Invitation

<h2>Create Invitation</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="GuestName">Guest Name</label>
        <input type="text" id="GuestName" name="GuestName" required />
    </div>
    <div>
        <label for="GuestEmail">Guest Email</label>
        <input type="email" id="GuestEmail" name="GuestEmail" required />
    </div>
    <input type="hidden" name="PartyId" value="@Model.PartyId" />
    <button type="submit" class="btn btn-primary">Submit Invitation</button>
</form>
