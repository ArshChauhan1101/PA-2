@model PartyInvitesApp.Models.InvitationResponseModel

<h2>@Model.Party.Description</h2>
<p><strong>Event Date:</strong> @Model.Party.EventDate</p>
<p><strong>Location:</strong> @Model.Party.Location</p>

<h4>Please let us know if you can attend:</h4>

@if (Model.Invitation.Status == InvitationStatus.InviteSent)
{
    <p>You have already received the invitation. Please respond below.</p>
}
else
{
    <p>Your invitation is still pending.</p>
}

<form asp-action="Response" method="post">
    <input type="hidden" name="Invitation.GuestEmail" value="@Model.Invitation.GuestEmail" />
    <input type="hidden" name="Party.Id" value="@Model.Party.Id" />

    <label>
        <input type="radio" name="Response" value="Yes" /> Yes
    </label>
    <label>
        <input type="radio" name="Response" value="No" /> No
    </label>

    <button type="submit">Submit Response</button>
</form>
