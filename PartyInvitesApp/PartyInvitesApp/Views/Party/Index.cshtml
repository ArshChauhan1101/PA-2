@model IEnumerable<PartyInvitesApp.Models.Party>

@{
    ViewData["Title"] = "Parties";
}

<h1>Parties</h1>

<p>
    <a href="@Url.Action("Create", "Party")" class="btn btn-primary">Create New Party</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Event Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var party in Model)
{
    <tr>
        <td>@party.Description</td>
        <td>@party.EventDate</td>
        <td>@party.Location</td>
        <td>
            <a href="@Url.Action("Edit", "Party", new { id = party.Id })" class="btn btn-warning">Edit</a>
            <a href="@Url.Action("Manage", "Party", new { id = party.Id })" class="btn btn-primary">Manage</a>
        </td>
    </tr>
}   </tbody>
</table>
